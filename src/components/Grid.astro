---
import Container from "./Container.astro";

const { cols = "2", class: className } = Astro.props;

const colClass = cols === "2" ? "md:grid-cols-2" : "sm:grid-cols-2 md:grid-cols-4";
---

<Container>
  <div class:list={["grid grid-cols-1 gap-0 lg:gap-4", colClass, className]}>
    <slot />
  </div>
</Container>
